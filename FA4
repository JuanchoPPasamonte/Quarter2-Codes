num_students = int(input("Enter number of students: "))
num_subjects = int(input("Enter number of subjects: "))

total_class_average = 0 
for i in range(1, num_students + 1):
    print(f"\nStudent {i}")
    total_score = 0
    for j in range(1, num_subjects + 1):
        score = float(input(f"Enter score {j}: "))
        total_score += score
    student_average = total_score / num_subjects
    print(f"Average for Student {i} = {student_average:.1f}")
    total_class_average += student_average
class_average = total_class_average / num_students
print(f"\nClass Average = {class_average:.1f}")
